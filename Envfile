enable_defaults!

variable :AWS_REGION
variable :AWS_ACCESS_KEY_ID
variable :AWS_SECRET_ACCESS_KEY

variable :WEB_CONCURRENCY, :integer, default: 3

[:development, :test].each do |env|
  group env do
    variable :LIVE_FEATURE_SPECS, :boolean, default: false
    variable :TEST_ACCESS_KEY_ID
    variable :TEST_SECRET_ACCESS_KEY
  end
end

group :production do
  variable :VCAP_SERVICES, :string, default: nil
  variable :MEMCACHIER_SERVERS, :string, default: nil
end
