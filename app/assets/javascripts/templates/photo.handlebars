<article class="photo-content" {{bind-attr id=photoId}}>
  {{partial "photo_img"}}

  <dl>
    <dt>Filename</dt>
    <dd>{{filename}}&nbsp;</dd>
    <dt>Date</dt>
    <dd>{{formatTakenAt takenAt}}&nbsp;</dd>
    <dt>Location</dt>
    <dd>
      <a {{bind-attr href=locationURL}}>{{coordinates latitude longitude}}&nbsp;</a>
    </dd>
    <dt>Description</dt>
    <dd>{{comment}}&nbsp;</dd>
  </dl>
</article>
